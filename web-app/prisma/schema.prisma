generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  POLE_STAFF
  POLE_RESP
  ADMIN
  SUPER_ADMIN
}

enum School {
  LYON
  RENNES
  ROUEN
  STRASBOURG
  TOULOUSE
  CENTRE_VAL_DE_LOIRE
  HAUTS_DE_FRANCE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  school        School?
  sport         String?   // Could be an enum or relation later
  
  accounts      Account[]
  sessions      Session[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  mealLogs      MealLog[]
  
  // Relations CMS
  announcements Announcement[]
  poleId        String?
  pole          Pole?     @relation(fields: [poleId], references: [id])

  // Relations Pole Tools
  assignedTasks PoleTask[] @relation("AssignedTasks")
  createdTasks  PoleTask[] @relation("CreatedTasks")
  messages      PoleMessage[]
  payments      Payment[]
  
  memberships   PoleMembership[]
  
  // New Chat System
  conversations ConversationParticipant[]
  sentMessages  Message[]
}

model MealLog {
  id        String   @id @default(cuid())
  userId    String
  scannedAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GlobalSettings {
  id              String    @id @default("settings")
  isMealActive    Boolean   @default(false)
  currentMealDate DateTime? // Tracks when the current/last meal service started
}

// --- CMS Models ---

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}

model Pole {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String   @default("#EF4444") // Red default
  
  members     User[]
  memberships PoleMembership[]
  events      Event[]
  
  // Internal Tools
  tasks       PoleTask[]
  messages    PoleMessage[]
  meetings    PoleMeeting[]
  
  // New Chat System
  conversations Conversation[]
}

model Location {
  id       String   @id @default(cuid())
  name     String   @unique
  address  String?
  lat      Float?
  lng      Float?
  events   Event[]
}

enum EventType {
  generic
  match
  ceremony
  meal
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  type        EventType @default(generic)

  locationId  String?
  location    Location? @relation(fields: [locationId], references: [id])
  
  poleId      String?
  pole        Pole?     @relation(fields: [poleId], references: [id])

  match       Match?
}

model Match {
  id        String   @id @default(cuid())
  eventId   String   @unique
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  homeTeam  String   // e.g. "Rouen"
  awayTeam  String   // e.g. "Lyon"
  homeScore Int      @default(0)
  awayScore Int      @default(0)
  
  status    String   @default("SCHEDULED") // SCHEDULED, LIVE, FINISHED
  sport     String?  // e.g. "Football"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Pole Internal Tools Models ---

model PoleTask {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("TODO") // TODO, IN_PROGRESS, DONE
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  poleId      String
  pole        Pole     @relation(fields: [poleId], references: [id], onDelete: Cascade)
  
  creatorId   String?
  creator     User?    @relation("CreatedTasks", fields: [creatorId], references: [id])
  
  assignees   User[]   @relation("AssignedTasks")
  checklist   TaskChecklistItem[]
}

model TaskChecklistItem {
  id        String   @id @default(cuid())
  content   String
  isDone    Boolean  @default(false)
  
  taskId    String
  task      PoleTask @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model PoleMessage {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  
  poleId    String
  pole      Pole     @relation(fields: [poleId], references: [id], onDelete: Cascade)
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}

model PoleMeeting {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  createdAt   DateTime @default(now())
  
  poleId      String
  pole        Pole     @relation(fields: [poleId], references: [id], onDelete: Cascade)
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  CANCELLED
}

model Payment {
  id        String        @id @default(cuid())
  amount    Int           // Amount in cents
  currency  String        @default("EUR")
  status    PaymentStatus @default(PENDING)
  lyfId     String?       // ID returned by LyfPay
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model SportList {
  id    String @id @default(cuid())
  name  String @unique
}

model PoleMembership {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  poleId    String
  pole      Pole     @relation(fields: [poleId], references: [id], onDelete: Cascade)
  role      PoleRole // STAFF, RESP

  createdAt DateTime @default(now())

  @@unique([userId, poleId])
}

enum PoleRole {
  STAFF
  RESP
}

model Conversation {
  id        String   @id @default(cuid())
  name      String?
  type      ConversationType @default(GROUP)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  poleId    String?
  pole      Pole?    @relation(fields: [poleId], references: [id])

  participants ConversationParticipant[]
  messages     Message[]
}

enum ConversationType {
  DM
  GROUP
  POLE
}

model ConversationParticipant {
  id             String       @id @default(cuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  joinedAt       DateTime     @default(now())

  @@unique([userId, conversationId])
}

model Message {
  id             String       @id @default(cuid())
  content        String       @db.Text
  createdAt      DateTime     @default(now())
  
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])
  
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}
